{
  "name": "javascript-development-environment",
  "version": "1.0.0",
  "description": "JavaScript development environment Pluralsight course by Cory House",
  "repository": {
    "type": "git",
    "url": "https://github.com/askiner/js-dev-env"
  },
  "scripts": {
    "prestart": "babel-node buildScripts/startMessage.js",
    "start": "npm-run-all --silent --parallel open:src lint:watch test:watch start-mockapi",
    "open:src": "babel-node buildScripts/srcServer.js",
    "lint": "esw webpack.config.* src buildScripts --color",
    "lint:watch": "npm run lint -- --watch",
    "security-check": "npm audit",
    "localtunnel": "lt --port 3000",
    "ngrok": "ngrok http 3000",
    "share": "npm-run-all --parallel open:src localtunnel",
    "share-ngrok": "npm-run-all --parallel open:src ngrok",
    "ts-tst": "tsc buildScripts/greeter.ts",
    "test": "mocha --reporter progress buildScripts/testSetup.js \"src/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "generate-mock-data": "babel-node buildScripts/generateMockData",
    "prestart-mockapi": "npm run generate-mock-data",
    "start-mockapi": "json-server --watch src/api/db.json --port 3001",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test lint",
    "build": "babel-node buildScripts/build.js",
    "postbuild": "babel-node buildScripts/distServer.js",
    "deploy": "surge ./dist"
  },
  "author": "Cory House",
  "license": "MIT",
  "dependencies": {
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "chalk": "^1.1.3",
    "cheerio": "0.22.0",
    "compression": "^1.7.3",
    "cross-env": "3.1.3",
    "css-loader": "^3.0.0",
    "debug": "^3.1.0",
    "eslint": "3.19.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-watch": "^4.0.2",
    "express": "^4.17.3",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "9.8.0",
    "json-schema-faker": "^0.4.7",
    "json-server": "^0.14.2",
    "localtunnel": "^1.9.2",
    "mini-css-extract-plugin": "^0.5.0",
    "mocha": "^5.2.0",
    "nock": "^9.4.2",
    "npm-run-all": "3.1.1",
    "numeral": "1.5.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "rimraf": "2.5.4",
    "style-loader": "0.13.1",
    "typescript": "^3.2.2",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.29.4",
    "webpack-dev-middleware": "1.8.4",
    "webpack-hot-middleware": "2.13.0",
    "webpack-md5-hash": "0.0.5"
  }
}
